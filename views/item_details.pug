extends layout

block content
  div(class='item-container')
    div(class='item-details-container')
      img(src=item_details.image.imageUrl)
      div(class='details-link-container')
        div
          p #{item_details.name}
          div By: 
            p #{item_details.author}
          div(class='genre-container') Genre: 
            p #{item_details.genre}
          if(item_details.details)
            h2(class='description-title') Description:
            div(class='description-container')
              p #{item_details.details}
        div(class='link-container')
          a(href=`/category/authentication/${item_details._id}` class='edit-link') Edit
              img(src='/images/icons/edit.svg' class='icon')
          a(href=`/category/deleteItem/${item_details._id}` class='delete-link') Delete
            img(src='/images/icons/trashcan.svg' class='icon')
    p #{item_details.category}
